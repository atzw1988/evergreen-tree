var kindList = ['', '意外险', '健康险', '财险', '人寿险']
var statusMap = ['success', 'waiting', 'fail']
var statusTextMap = ['交易成功', '等待支付', '交易失败']
var orderMap = ['在保', '失效']
module.exports = {
	moneyFormat: function (money) {
		console.log(money)
		var str = money.toString()
		var point = str.indexOf('.')
		var newArr = []
		var format = ''
		var len = 0
		var arr = []
		var decimal = ''
		var int = ''
		if (point < 0) {
			len = str.length
			arr = str.split('').reverse()
		} else {
			int = str.split('.')[0]
			decimal = str.split('.')[1]
			len = int.length
			arr = int.split('').reverse()
		}
		for (var i = 0; i < len; i ++) {
			if ((i + 1) % 3 == 0 && (i +1) != len) {
				newArr.push(arr[i])
				newArr.push(',')
			} else {
				newArr.push([arr[i]])
			}
		}
		if (point < 0) {
			format = newArr.reverse().join('')
		} else {
			format = newArr.reverse().join('') + '.' + decimal
		}
		console.log(format)
		return format
	},
	kindName: function (id) {
		return kindList[id]
	},
	year: function (time) {
		if (time) {
			return time.split('-')[0]
		} else {
			return ''
		}
	},
	date: function (time) {
		if (time) {
			var arr = time.split(' ')[0].split('-')
			return arr[1] + '-' + arr[2]
		} else {
			return ''
		}
	},
	status: function (id) {
		return statusMap[id]
	},
	statusText: function (id) {
		return statusTextMap[id]
	},
	// 客户详情订单状态
	orderStatus: function (id) {
		return orderMap[id]
	},
	// 信息遮蔽
	shelter: function (str, pre, after) {
		if (str) {
			var len = str.length
			var poor = len - pre - after
			var supp = ''
			for (var i = 0; i < poor; i ++) {
				supp += '*'
			}
			return str.slice(0, pre) + supp + str.slice(len - after, len)
		} else {
			return ''
		}
	},
	// 答题选择
	checked: function (index, id) {
		if (index == id) {
			return 'checked'
		} else {
			return ''
		}
	},
	// 答题倒计时
	countDown: function (time) {
		var m = '00'
		var s = '00'
		var str = ''
		if (time < 60) {
			str = m + ':' + time
		} else {
			var a = Math.floor(time / 60)
			var b = time % 60
			if (a < 10) {
				m = '0' + a
			} else {
				m = a
			}
			if (b < 10) {
				s = '0' + b
			} else {
				s = b
			}
			str = m + ':' + s
		}
		return str
	}
}